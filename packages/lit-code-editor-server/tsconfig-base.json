{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "allowJs": false,
    "lib": [
      "es2017",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "exclude": [
    "test/fixtures/**/*.*",
    "node_modules/**/*"
  ]
}